{
  "rules": {
    "arrow-parens": ["error", "always"],
    "curly": ["error", "multi-line"],
    "new-cap": ["error", {
      "capIsNew": false
    }],
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "object-curly-spacing": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never"
    }],
    "unicorn/prevent-abbreviations": "off",
    "unicorn/catch-error-name": ["error", {
      "name": "err"
    }],
    "quotes": ["error", "single", {
      "avoidEscape": true
    }]
  },
  "overrides": [{
    "files": "test/*.js",
    "envs": ["mocha"]
  }]
}
